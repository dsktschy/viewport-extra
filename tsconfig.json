{
  "compilerOptions": {
    "module": "nodenext",
    "lib": ["es2020", "dom"],
    "strict": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "examples"],
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.cts",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/.*.ts",
    "**/.*.mts",
    "**/.*.cts",
    "**/.*.js",
    "**/.*.mjs",
    "**/.*.cjs"
  ]
}
