{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "strict": true,
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@@/*": ["./*"],
      "rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
    },
    "target": "esnext"
  },
  "exclude": ["**/node_modules", "examples", "**/dist", "types", ".types"],
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.cts",
    "**/.*.ts",
    "**/.*.mts",
    "**/.*.cts"
  ]
}
