{
  "compilerOptions": {
    "module": "nodenext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "@@/*": ["./*"]
    }
  },
  "exclude": ["**/node_modules", "examples", "**/dist", ".types"],
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.cts",
    "**/.*.ts",
    "**/.*.mts",
    "**/.*.cts"
  ]
}
