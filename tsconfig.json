{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "examples"],
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.cts",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/.*.ts",
    "**/.*.mts",
    "**/.*.cts",
    "**/.*.js",
    "**/.*.mjs",
    "**/.*.cjs"
  ]
}
