{
  "name": "viewport-extra",
  "version": "2.4.1",
  "description": "Enable to set min-width and max-width to viewport",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/esm/index.js",
  "jsdelivr": "dist/iife/viewport-extra.min.js",
  "unpkg": "dist/iife/viewport-extra.min.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "npm-run-all --sequential build:execute build:postprocess",
    "build:execute": "tsup",
    "build:postprocess": "tsx --no-warnings=ExperimentalWarning scripts/postbuild.mts",
    "declare": "npm-run-all --sequential declare:execute declare:postprocess",
    "declare:execute": "tsup --dts-only",
    "declare:postprocess": "tsx --no-warnings=ExperimentalWarning scripts/postdeclare.mts",
    "spellcheck": "cspell lint",
    "stylecheck": "tsx --no-warnings=ExperimentalWarning scripts/biome-with-recursive-gitignore.mts",
    "typecheck": "npm-run-all --sequential declare typecheck:execute",
    "typecheck:execute": "tsc --noEmit",
    "test": "npm-run-all --parallel test:*",
    "test:unit": "vitest run",
    "test:e2e": "npm-run-all --parallel test:e2e:install build --sequential test:e2e:build test:e2e:execute",
    "test:e2e:install": "playwright install --with-deps",
    "test:e2e:build": "NODE_OPTIONS=--no-warnings=ExperimentalWarning vite build --config vite.config.e2e.mts",
    "test:e2e:execute": "playwright test --pass-with-no-tests",
    "preview-e2e": "NODE_OPTIONS=--no-warnings=ExperimentalWarning vite preview --config vite.config.e2e.mts --strictPort --port 3000",
    "polyfillcheck": "npm-run-all --parallel polyfillcheck:install polyfillcheck:preprocess --sequential polyfillcheck:build",
    "polyfillcheck:install": "npm install --no-save @babel/core @babel/cli @babel/preset-env",
    "polyfillcheck:preprocess": "tsx --no-warnings=ExperimentalWarning scripts/create-babelrc.mts",
    "polyfillcheck:build": "babel dist/iife --ignore=**/*.min.js --out-dir=.polyfillcheck --config-file=./.polyfillcheck/.babelrc.json --verbose",
    "confirm-es5-tested": "tsx scripts/confirm-es5-tested.mts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsktschy/viewport-extra.git"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "types"
  ],
  "keywords": [
    "viewport",
    "min",
    "max",
    "width",
    "mobile",
    "device",
    "shrink",
    "expand"
  ],
  "author": "dsktschy (https://github.com/dsktschy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dsktschy/viewport-extra/issues"
  },
  "homepage": "https://github.com/dsktschy/viewport-extra#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@playwright/test": "1.46.1",
    "@swc/core": "1.11.1",
    "@types/node": "22.5.2",
    "cspell": "8.18.0",
    "jsdom": "26.0.0",
    "jsonc-parser": "3.3.1",
    "lefthook": "1.11.0",
    "npm-run-all2": "7.0.2",
    "tsup": "8.4.0",
    "tsx": "4.19.3",
    "typescript": "5.5.4",
    "vite": "6.2.5",
    "vitest": "3.0.8"
  }
}
