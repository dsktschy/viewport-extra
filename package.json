{
  "name": "viewport-extra",
  "version": "2.4.1",
  "description": "Enable to set min-width and max-width to viewport",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/viewport-extra.d.mts",
        "default": "./dist/viewport-extra.mjs"
      },
      "require": {
        "types": "./dist/viewport-extra.d.cts",
        "default": "./dist/viewport-extra.cjs"
      }
    }
  },
  "main": "./dist/viewport-extra.cjs",
  "module": "./dist/viewport-extra.mjs",
  "browser": "./dist/viewport-extra.mjs",
  "jsdelivr": "./dist/viewport-extra.min.js",
  "unpkg": "./dist/viewport-extra.min.js",
  "types": "./dist/viewport-extra.d.mts",
  "scripts": {
    "build": "NODE_OPTIONS=--no-warnings=ExperimentalWarning rollup --config rollup.config.build.mjs --environment NODE_ENV:production",
    "declare": "npm-run-all --sequential declare:clean declare:execute declare:bundle declare:clean",
    "declare:clean": "rimraf .types",
    "declare:execute": "tsc src/viewport-extra.mts --declaration --emitDeclarationOnly --outDir .types --resolveJsonModule",
    "declare:bundle": "NODE_OPTIONS=--no-warnings=ExperimentalWarning rollup --config rollup.config.declare.mjs --environment NODE_ENV:production",
    "spellcheck": "cspell lint --no-must-find-files",
    "stylecheck": "tsx --no-warnings=ExperimentalWarning scripts/biome-with-recursive-gitignore.mts",
    "es5check": "NODE_OPTIONS=--no-warnings=ExperimentalWarning eslint 'src/**/*' --ignore-pattern 'src/**/*.spec.*' --no-warn-ignored --config eslint.config.es5.mjs",
    "typecheck": "npm-run-all --sequential declare typecheck:execute",
    "typecheck:execute": "tsc --noEmit",
    "test": "npm-run-all --parallel test:*",
    "test:unit": "vitest run",
    "test:e2e": "npm-run-all --parallel test:e2e:install build --sequential test:e2e:build test:e2e:execute",
    "test:e2e:install": "playwright install --with-deps",
    "test:e2e:build": "NODE_OPTIONS=--no-warnings=ExperimentalWarning vite build --config vite.config.e2e.mts",
    "test:e2e:execute": "playwright test --pass-with-no-tests",
    "preview-e2e": "NODE_OPTIONS=--no-warnings=ExperimentalWarning vite preview --config vite.config.e2e.mts --strictPort --port 3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsktschy/viewport-extra.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "viewport",
    "min",
    "max",
    "width",
    "mobile",
    "device",
    "shrink",
    "expand"
  ],
  "author": "dsktschy (https://github.com/dsktschy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dsktschy/viewport-extra/issues"
  },
  "homepage": "https://github.com/dsktschy/viewport-extra#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/compat": "1.2.8",
    "@playwright/test": "1.46.1",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.0",
    "@types/node": "22.5.2",
    "@typescript-eslint/parser": "8.30.1",
    "cspell": "8.18.0",
    "eslint": "9.25.0",
    "eslint-plugin-compat": "6.0.2",
    "jsdom": "26.0.0",
    "jsonc-parser": "3.3.1",
    "lefthook": "1.11.0",
    "npm-run-all2": "7.0.2",
    "rimraf": "6.0.1",
    "rollup": "4.24.0",
    "rollup-plugin-delete": "2.1.0",
    "rollup-plugin-dts": "6.1.1",
    "tslib": "2.6.3",
    "tsx": "4.19.3",
    "typescript": "5.5.4",
    "vite": "6.2.5",
    "vitest": "3.0.8"
  }
}
